<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
        xmlns:swipe="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:clickToClose="true">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:background="#FFF"
            android:tag="Bottom3">

        <ImageView
                android:id="@+id/position"
                android:src="@drawable/ic_place_white_24dp"
                android:layout_width="70dp"
                android:background="@color/colorPrimary"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/position"/>

        <ImageView
                android:id="@+id/done"
                android:src="@drawable/ic_send_white_24dp"
                android:layout_width="70dp"
                android:background="#4CAF50"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent" />

        <ImageView
                android:id="@+id/trash"
                android:src="@drawable/ic_delete_forever_white_24dp"
                android:layout_width="70dp"
                android:background="@color/errorColor"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="10dp">

        <TextView
                android:id="@+id/text_passengers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="Hover"
                android:text="@string/passengers"/>

        <TextView android:layout_width="40dp" android:layout_height="40dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp"
                  android:id="@+id/rider1"
                  android:visibility="gone"
                  android:background="@drawable/boy_left"/>

        <TextView android:layout_width="40dp" android:layout_height="40dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp"
                  android:id="@+id/rider2"
                  android:visibility="gone"
                  android:background="@drawable/boy_left"/>

        <TextView android:layout_width="40dp" android:layout_height="40dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp"
                  android:id="@+id/rider3"
                  android:visibility="gone"
                  android:background="@drawable/girl_left"/>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>